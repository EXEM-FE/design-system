---
import "../styles/globals.css";
const { title = "EXEM Design" } = Astro.props;
---

<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Geist 폰트 -->
    <link href="https://fonts.googleapis.com/css2?family=Geist+Sans&family=Geist+Mono&display=swap" rel="stylesheet" />
    <!-- Noto Sans KR (한글 지원) -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700&display=swap" rel="stylesheet" />

    <style>
      body {
        margin: 0;
        background: #141414;
        color: #fff;
        /* 영문은 Geist Sans, 한글은 Noto Sans KR → OS 기본 폰트 fallback */
        font-family: 'Geist Sans', 'Noto Sans KR', 'Apple SD Gothic Neo', 'Malgun Gothic', sans-serif;
      }
    </style>
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
