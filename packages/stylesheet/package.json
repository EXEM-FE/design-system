{
	"name": "exem-stylesheet",
	"version": "0.2.0",
	"description": "EXEM Design System - CSS Utilities and Base Styles",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./css": "./dist/index.css"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"css",
		"stylesheet",
		"utilities",
		"exem",
		"design-system"
	],
	"devDependencies": {
		"postcss": "^8.4.32",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3"
	}
}
