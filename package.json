{
	"name": "exem-design-system",
	"private": true,
	"version": "0.1.0",
	"description": "EXEM Design System - Monorepo",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"build": "pnpm -r build",
		"test": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "pnpm -r typecheck",
		"dev": "concurrently \"pnpm -r --parallel dev\" \"pnpm watch:tokens\"",
		"dev:packages": "pnpm -r --parallel dev",
		"watch:tokens": "node scripts/watch-tokens.js",
		"clean": "rm -rf packages/*/dist packages/*/node_modules",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm build && changeset publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@changesets/cli": "^2.27.1",
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/node": "^24.1.0",
		"chokidar": "^4.0.3",
		"concurrently": "^9.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"nodemon": "^3.1.10",
		"typescript": "^5.3.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
