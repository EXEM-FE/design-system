{
  "name": "@exem/design-system",
  "private": true,
  "version": "0.1.0",
  "description": "EXEM Design System - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm -r --parallel dev",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18"
  }
}